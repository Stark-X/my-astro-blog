---
import { Image } from "astro:assets";
export interface Props {
  badges: string[];
}
const { badges } = Astro.props;
---

<div class="container">
  {
    badges.map(badge => (
      <div class="item">
        <div class="img-container">
          <Image src={badge} alt="" width={100} height={100} class="img"/>
        </div>
        <div class="bottom">
          <div class="description">处理一般手sdfasdf机主题记者他们.longlonglong</div>
          <div class="issuer">PLC</div>
        </div>
      </div>
    ))
  }
</div>

<style>
  .container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }
  .item {
    width: 10rem;
    height: 16.8rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    border: 1px solid #eee;
    border-radius: 10px;
  }
  .description {
    width: 100%;
    padding: 0.5rem;
    /* height: 3.5rem; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .img {
    margin: 0.5rem;
  }
  .img-container {
    height: 100%;
    display: flex;
    align-items: center;
  }
  .issuer {
    font-size: 0.8rem;
    padding: 0.5rem 0;
    color: #666;
    background-color: #eee;
    width: 100%;
    text-align: center;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
  }
  .bottom {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
