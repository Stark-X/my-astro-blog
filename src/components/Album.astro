---
import { Image } from "astro:assets";
export interface Props {
  badgeSources: string[];
}
const { badgeSources } = Astro.props;
---

<div class="container">
  {
    badgeSources.map(badgeSource => (
      <div class="item">
        <div class="img">
          <Image src={badgeSource} alt="" width={100} height={100} />
        </div>
        <div class="description">处理一般手机主题记者他们.</div>
        <div class="issuer">PLC</div>
      </div>
    ))
  }
</div>

<style>
  .container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }
  .item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    border: 1px solid #eee;
  }
  .description {
    margin: 0.5rem;
  }
  .img {
    margin: 0.5rem;
  }
  .issuer {
    font-size: 0.8rem;
    padding: 0.5rem 0;
    color: #666;
    background-color: #eee;
    width: 100%;
    text-align: center;
  }
</style>
